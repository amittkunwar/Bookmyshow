<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddMovieActivity">

    <EditText
        android:id="@+id/movie_name_edit_text"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:background="@drawable/edittext_background"
        android:hint="Movie Name"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/movie_description_edit_text"
        android:layout_width="297dp"
        android:layout_height="99dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_background"
        android:hint="Description"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_name_edit_text" />

    <EditText
        android:id="@+id/movie_rating_edit_text"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_background"
        android:hint="Rating"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_description_edit_text" />

    <EditText
        android:id="@+id/movie_cast_edit_text"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_background"
        android:hint="Cast"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_rating_edit_text" />

    <ImageView
        android:id="@+id/movie_poster_image_view"
        android:layout_width="139dp"
        android:layout_height="217dp"
        android:layout_marginTop="28dp"
        android:contentDescription="Movie Poster"
        android:src="@drawable/file_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_cast_edit_text" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload_poster_button"
        android:layout_width="263dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_background"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/robo"
        android:text="Upload Poster"

        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_poster_image_view" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_movie_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:background="@drawable/edittext_background"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/robo"
        android:text="Add Movie"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_poster_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>